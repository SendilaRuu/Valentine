<script>
(function(){emailjs.init("PEkYFbEQxWdbV4RPK");})();

/* unlock */
function unlock(){
let code=document.getElementById("code").value;
if(code==="2024.11.04"){
document.getElementById("lock").classList.remove("show");
document.getElementById("start").classList.add("show");
}else{
document.getElementById("error").innerText="Wrong date ‚ù§Ô∏è";
}
}

/* navigation */
function goWhy(){
document.getElementById("start").classList.remove("show");
document.getElementById("why").classList.add("show");
typeText();
}

function goLittle(){
document.getElementById("why").classList.remove("show");
document.getElementById("little").classList.add("show");
}

/* typing letter */
const msg=`You are not just my girlfriend...
You are my calm place.
My safe place.
My happiness on hard days.

I love the way you care,
the way you get angry,
the way you overthink,
and even your silence.

I didn't just fall in love with you...
I chose you. Every day. üíû`;

let i=0;
function typeText(){
if(i<msg.length){
document.getElementById("typeText").innerHTML+=msg.charAt(i);
i++;
setTimeout(typeText,35);
}
}

/* floating emojis */
const emojis=["üíã","üíò","üíû","üíù","üíï","üíñ","ü•∫"];
setInterval(()=>{
let h=document.createElement("div");
h.className="heart";
h.innerHTML=emojis[Math.floor(Math.random()*emojis.length)];
h.style.left=Math.random()*100+"vw";
h.style.fontSize=(Math.random()*25+18)+"px";
document.body.appendChild(h);
setTimeout(()=>h.remove(),7000);
},350);

/* email when she reaches last page */
emailjs.send("service_dxpfu1a","template_ho3k8dp",{
to_email:"sendilajayasundara@gmail.com",
